---
layout: 'layouts/default.njk'
pagination:
  data: comics.series
  size: 1
  alias: seriesCurr
permalink: "comics/{{ seriesCurr | slugify }}/"
eleventyComputed:
  title: "{{ seriesCurr }} : Comics"
---

{%- import 'components/heading.njk' as heading %}
{%- import 'components/item-list.njk' as list %}

<article class="container mx-auto p-6">
  {{ heading.x(seriesCurr) }}
  <ul class="grid(& cols-2) gap-16 lg:(grid-cols-5)">
    {%- for item in comics.items | pluck(seriesCurr, 'series') %}
      <li>
        {{ list.x(name=item.issue +' / '+ item.release_date,image='/_assets/img/comics/'+ item.series | slugify +'/'+ item.issue +'.jpg?v='+ version) }}
      </li>
    {%- endfor %}
  </ul>
</article>
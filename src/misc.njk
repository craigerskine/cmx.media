---
layout: 'layouts/default.njk'
eleventyNavigation:
  key: Misc
  order: 3
title: 'Misc'
---

<section>
  <div class="container mx-auto">
    <ul class="grid(& cols-3) gap-10 lg:(gap-16)">
      {%- for series in (misc.series) %}
        <li>
          <a href="/misc/{{ series | slugify }}/" class="mx-auto max-w-screen-xs text-center block relative">
            <figure>
              <img src="/_assets/img/misc/{{ series | slugify }}/series.jpg?v={% version %}" alt="{{ series }}" class="mx-auto w-full" />
              <figcaption>
                <strong class="truncate">{{ series }}</strong>
                <ul class="text-xs font-mono flex flex-wrap justify-center gap-x-3">
                  {%- for item in misc.items | pluck(series, 'series') %}
                    <li>
                      {{ item.issue }}
                    </li>
                  {%- endfor %}
                </ul>
              </figcaption>
            </figure>
            <b class="w-6 h-6 bg-white flex items-center justify-center absolute -top-3 -right-3 rounded-full">{{ misc.items | pluck(series, 'series') | length }}</b>
          </a>
        </li>
      {%- endfor %}
    </ul>
  </div>
</section>
---
layout: 'layouts/default.njk'
title: 'Comics'
---

<section>
  <div class="container mx-auto">
    <ul class="grid(& cols-3) gap-10 lg:(gap-16)">
      {% for series in (comics.series) -%}
        <li>
          <a href="/comics/{{ series | slugify }}/" class="mx-auto max-w-xs text-center block">
            <figure>
              <img src="/_assets/img/comics/{{ series | slugify }}/series.jpg?v={% version %}" alt="{{ series }}" class="mx-auto w-32" />
              <figcaption>
                <strong class="truncate">{{ series.series }}</strong>
                <ul class="text-xs font-mono flex flex-wrap justify-center gap-x-3">
                  {%- for item in comics.items %}
                    {%- if item.series === series %}
                      <li>
                        {{ item.issue }}
                      </li>
                    {%- endif %}
                  {%- endfor %}
                </ul>
              </figcaption>
            </figure>
          </a>
        </li>
      {% endfor -%}
    </ul>
  </div>
</section>
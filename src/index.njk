---
layout: 'layouts/default.njk'
---

{% set pricesComics = [] %}
{% for p in comics.items %}
  {% set pricesComics = (pricesComics.push(p.price), pricesComics) %}
{% endfor %}

{% set pricesZines = [] %}
{% for p in zines.items %}
  {% set pricesZines = (pricesZines.push(p.price), pricesZines) %}
{% endfor %}


  <article class="m-auto w-full text-2xl grid(& cols-1) md:(text-[calc(4vw)] leading-none tracking-tighter grid-cols-3)">
    <a href="/comics/" class="p-8 block motion-safe:(transition) hover:(text-pri-200)">
      <div class="m-auto max-w-[200px]">
        <p class="label flex items-end" data-label="Comics:"><b class="ml-auto">{{ comics.items | length }}</b></p>
        <small class="pt-2 text-xs tracking-normal flex">
          <span>{{ comics.series | length }} series</span>
          <span class="ml-auto">${{ pricesComics | sum | round }}</span>
        </small>
      </div>
    </a>
    <a href="/zines/" class="p-8 block motion-safe:(transition) hover:(text-pri-200)">
      <div class="m-auto max-w-[200px]">
        <p class="label flex items-end" data-label="Zines:"><b class="ml-auto">{{ zines.items | length }}</b></p>
        <small class="pt-2 text-xs tracking-normal flex">
          <span>{{ zines.series | length }} series</span>
          <span class="ml-auto">${{ pricesZines | sum | round }}</span>
        </small>
      </div>
    </a>
    <a href="/misc/" class="p-8 block motion-safe:(transition) hover:(text-pri-200)">
      <div class="m-auto max-w-[200px]">
        <p class="label flex items-end" data-label="Misc:"><b class="ml-auto">{{ misc.items | length }}</b></p>
        <small class="pt-2 text-xs tracking-normal flex">
          <span>{{ misc.series | length }} series</span>
        </small>
      </div>
    </a>
  </article>
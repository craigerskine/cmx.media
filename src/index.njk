---
layout: 'layouts/default.njk'
---

{% set pricesComics = [] %}
{% for p in comics.items %}
  {% set pricesComics = (pricesComics.push(p.price), pricesComics) %}
{% endfor %}

{% set pricesZines = [] %}
{% for p in zines.items %}
  {% set pricesZines = (pricesZines.push(p.price), pricesZines) %}
{% endfor %}

<article class="py-12 w-full flex">
  <ul class="m-auto w-full max-w-[12rem] text-2xl flex(& col) gap-12 md:(text-[calc(4vw)] tracking-tighter)">
    <li>
      <div class="label flex items-end" data-label="Series:"><span class="mx-auto">{{ (comics.series | length) + (zines.series | length) + (misc.series | length) }}</span></div>
      <small class="pt-2 text(sm right) tracking-normal block">${{ (pricesComics | sum | round) + (pricesZines | sum | round) }}</small>
    </li>
    <li>
      <div class="label flex items-end" data-label="Comics:"><a href="/comics/" class="mx-auto">{{ comics.items | length }}</a></div>
      <small class="pt-2 text(sm right) tracking-normal block">${{ pricesComics | sum | round }}</small>
    </li>
    <li>
      <div class="label flex items-end" data-label="Zines:"><a href="/zines/" class="mx-auto">{{ zines.items | length }}</a></div>
      <small class="pt-2 text(sm right) tracking-normal block">${{ pricesZines | sum | round }}</small>
    </li>
    <li><div class="label flex items-end" data-label="Misc:"><a href="/misc/" class="mx-auto">{{ misc.items | length }}</a></div></li>
  </ul>
</article>
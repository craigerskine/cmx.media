---
layout: layouts/default.njk
pagination:
  data: collections.magazinesByTitle
  size: 1
  alias: magazine
permalink: 'magazines/{{ magazine | slugify }}/'
eleventyComputed:
  title: '{{ magazine | safe }}'
  cover: '/_assets/img/magazines/{{ magazine | slugify }}/series.jpg'
---

{%- from 'macro.list.njk' import list, listItem -%}

{%- setblock 'details' %}
<label class="flex items-center gap-3 cursor-pointer">
  <span class="text-xs select-none opacity-80" x-text="comicHud ? 'Details' : 'Show details'"></span>
  <input x-model="comicHud" type="checkbox" class="toggle" />
</label>
{%- endsetblock %}

{%- call list() %}
  {%- for type, items in collections.magazines | groupby('data.title') %}
    {%- if type == magazine %}
      {%- for item in items %}
        {{ listItem({
          title: item.data.issue,
          sub: item.data.release_date,
          signed: item.data.signed_by,
          image: '/_assets/img/magazines/'+ item.data.title | slugify +'/'+ item.data.issue | slugify +'.jpg',
          loop: loop
        }) }}
      {%- endfor %}
    {%- endif %}
  {%- endfor %}
{%- endcall %}

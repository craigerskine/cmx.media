---
layout: layouts/default.njk
title: Comics
eleventyComputed:
  eleventyNavigation:
    key: "{{ title }}"
    ico: mdi:library-shelves
    order: 1
---

{%- from 'macro.list.njk' import list, listItem -%}

{%- call list() %}
  {%- for type, items in collections.comics | sort(false, false, 'data.title') | groupby('data.title') %}
    {{ listItem({
      series: type,
      title: type,
      badge: items.length,
      image: '/_assets/img/comics/'+ type | slugify +'/series.jpg',
      url: '/comics/'+ type | slugify +'/'
    }) }}
  {%- endfor %}
{%- endcall %}

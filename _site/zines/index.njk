---
layout: 'layouts/default.njk'
pagination:
  data: zines.series
  size: 1
  alias: seriesCurr
permalink: "zines/{{ seriesCurr | slugify }}/"
eleventyComputed:
  title: "{{ seriesCurr }} : Magazines"
---

{%- import 'components/heading.njk' as heading %}
{%- import 'components/item-list.njk' as list %}

<article class="container mx-auto p-6">
  {{ heading.x(seriesCurr) }}
  <ul class="grid(& cols-2) gap-16 lg:(grid-cols-5)">
    {%- for item in zines.items | pluck(seriesCurr, 'series') %}
      {{ list.x(name=item.issue +' / '+ item.release_date,image='/_assets/img/zines/'+ item.series | slugify +'/'+ item.issue +'.jpg',loop=loop) }}
    {%- endfor %}
  </ul>
</article>
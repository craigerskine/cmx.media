---
layout: 'layouts/default.njk'
pagination:
  data: collections.miscByTitle
  size: 1
  alias: misc
permalink: 'misc/{{ misc | slugify }}/'
eleventyComputed:
  title: '{{ misc | safe }}'
  cover: '/_assets/img/misc/{{ misc | slugify }}/series.jpg'
---

{%- import 'components/el.njk' as el -%}

{% call el.list() %}
  {%- for type, items in collections.misc | groupby('data.title') %}
    {% if type == misc %}
      {% for item in items %}
      {{ el.listitem(title=item.data.issue,signed=item.data.signed_by,image='/_assets/img/misc/'+ item.data.title | slugify +'/'+ item.data.issue | slugify +'.jpg',loop=loop) }}
      {% endfor %}
    {% endif %}
  {%- endfor %}
{% endcall %}